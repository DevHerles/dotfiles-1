#!/usr/local/bin/ruby

puts "=> Convert All Branch to Patch"
system """
suckdiff &&
git reset --hard origin/master
"""
puts "=> Converting COMPLETE!"

branches = [
'config',
'actualfullscreen',
'autostart',
'movestack',
'pertag',
'resizecorners',
'focusonnetactive',
'statusallmons',
'zoomswap',
'center',
'rules',              # merge /w: center
'fullgaps',           # merge /w: config
'cfacts',             # merge /w: config, movestack, fullgaps
'keys',               # merge /w: config

# Disable branch
#'singularborders',
#'noborder',
#'gaps',
#'attachbottom',
]

puts "\n=> Patching All Branch to Master"
for branch in branches do
  print "Patching #{branch}... "
  `git merge #{branch} -m #{branch}`
  print "DONE\n"
end
puts "=> Patching COMPLETE!"

puts "\n=> Installing"
system """
make && sudo make clean install
"""
puts "=> Installation COMPLETE!"
